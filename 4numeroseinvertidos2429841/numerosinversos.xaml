<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4numeroseinvertidos2429841.numerosinversos"
             Title="numerosinversos">
    <VerticalStackLayout>
        
        <Image
                Source="numeros.jpg"
                HeightRequest="200"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
        
        <Label 
            Text="INGRESA CUATRO NUMEROS Y LUEGO MUESTRALOS EN ORDEN INVERSO"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="entry1" Placeholder="Introduce el primer número"/>
        <Entry x:Name="entry2" Placeholder="Introduce el segundo número"/>
        <Entry x:Name="entry3" Placeholder="Introduce el tercer número"/>
        <Entry x:Name="entry4" Placeholder="Introduce el cuarto número"/>
        
        <Entry x:Name="entryAlreves" Placeholder="Los números invertidos son: "/>
        <Button Text="invertir" Clicked="Button_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>